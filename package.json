    "url": "https://github.com/evaou/typescript-rest-api/issues"
  },
  "homepage": "https://github.com/evaou/typescript-rest-api#readme",
  "dependencies": {
    "@types/amqplib": "^0.5.14",
    "@types/express": "^4.17.8",
    "amqplib": "^0.6.0",
    "body-parser": "^1.19.0",
    "env-var": "^6.3.0",
    "express": "^4.17.1",
    "mongoose": "^5.10.9",
    "nodemon": "^2.0.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.13",
